{
  "exclude": ["../packages", "./migrations"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"],
    "types": ["node", "jest", "urijs"]
  }
}
