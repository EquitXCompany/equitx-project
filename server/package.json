{
  "name": "stellar-cdp-server",
  "version": "1.0.1",
  "main": "dist/src/index.js",
  "workspaces": [
    "../packages/*",
    "packages/*"
  ],
  "scripts": {
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:run": "npm run typeorm migration:run -- -d src/ormconfig.ts",
    "migration:generate": "npm run typeorm migration:generate -- -d src/ormconfig.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d src/ormconfig.ts",
    "coldstart": "npm run migration:run && npm run start",
    "start": "node dist/src/index.js",
    "dev": "nodemon src/index.ts",
    "dev:once": "ts-node src/index.ts",
    "build": "tsc",
    "test": "jest"
  },
  "dependencies": {
    "@stellar/stellar-sdk": "14.1.1",
    "@types/cors": "^2.8.17",
    "@types/json-schema": "^7.0.15",
    "axios": "^1.12.2",
    "bip39": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ed25519-hd-key": "^1.3.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "node-cron": "^3.0.3",
    "pg": "^8.13.1",
    "simple-git": "^3.27.0",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.9",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/urijs": "^1.19.25",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
